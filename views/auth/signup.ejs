<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="signup">
    <h1>Signup</h1>
    <form class="signup-form" action="/signup" method="POST" novalidate>
      <div class="form-control">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= oldData.email %>">
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input type="text" name="password" id="password" value="<%= oldData.password %>">
      </div>
      <div class="form-control">
        <label for="confirmPassword">Confirm Password</label>
        <input type="text" name="confirmPassword" id="confirmPassword" value="<%= oldData.confirmPassword %>">
      </div>

      <input type="hidden" value="<%= csrfToken  %>" name="_csrf">
      <button type="submit">signup</button>
    </form>
    <% if (errorMessage) { %>
      <span class="error"><%= errorMessage %></span>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>